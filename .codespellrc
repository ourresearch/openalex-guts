[codespell]
# Ref: https://github.com/codespell-project/codespell#using-a-config-file
# unicode_mapping.py - includes 'occurence' typo
skip = .git*,.codespellrc,unidecode,*_last_name.py,unicode_mapping.py,issn_ic_datafiles_update*.ipynb
check-hidden = true
ignore-regex = ^\s*"image/\S+": ".*|"[A-Z]{2}": .*
# short abbreviations, some international (?) words worth generally skipping
ignore-words-list = nd,jurnal,studi,selectin
